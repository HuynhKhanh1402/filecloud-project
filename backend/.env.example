# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (Local PostgreSQL)
# For local development without Docker, use:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/filecloud?schema=public
# For Docker environment, use:
DATABASE_URL=postgresql://filecloud:filecloud123@postgres:5432/filecloud?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MinIO Configuration
# For local development without Docker, use localhost
# MINIO_ENDPOINT=localhost
# For Docker environment, use service name
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=filecloud

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
CORS_CREDENTIALS=true
